---
import { NestjsIcon } from '../icons';
import { ExternalLinkIcon, AstroIcon, CssIcon, ReactIcon, TailwindIcon, TypeScriptIcon, JavaScriptIcon, NextjsIcon } from '../icons'
import WorkCards from './WorkCards.astro'
---

<section id="work" class="bg-gradient-to-b from-zinc-950 to-rose-950/10 h-screen w-full py-14 flex">
    <div class="w-[90%] lg:w-[60%] h-full  m-auto flex flex-col gap-8 sm:gap-10">
        <h2 class="inline-block text-4xl md:text-5xl font-medium bg-gradient-to-l  from-rose-500 to-rose-900 text-transparent bg-clip-text">Proyectos</h2>

        <div>
            <p class="text-sm md:text-base text-zinc-300">Estos son mis últimos proyectos, los demás se encuentran en mi <a href="https://github.com/yesidexe" class="inline-flex gap-1 items-center hover:text-rose-500 duration-300" target="_blank">Github <span><ExternalLinkIcon className="w-4"/></span></a></p>
        </div>

        <div class="gap-x-5 gap-y-5 sm:gap-y-8 grid grid-cols-[repeat(auto-fill,minmax(18.2538rem,1fr))] overflow-hidden">
            <WorkCards addClass="" title="Portafolio V1" src="/assets/todo-list.JPG" rep="https://github.com/yesidexe/portafolio-v1" dep="https://fluffy-squirrel-6ccca9.netlify.app/">
                <TypeScriptIcon className="hover:bg-white duration-300 hover:text-[#007ACC] text-zinc-300 w-6 sm:w-7"/>
                <TailwindIcon className='w-6 sm:w-7 duration-300 hover:text-[#44a8b3] text-zinc-300'/>                
                <AstroIcon className='w-6 sm:w-7 duration-300 hover:text-[#ff5d01] text-zinc-300'/>
                <ReactIcon className='duration-300 hover:text-[#00D8FF] text-zinc-300 w-6 sm:w-7'/>
            </WorkCards>

            <WorkCards addClass="" title="Entertainment web app" src="/assets/entertainment-web-app.JPG" rep="https://github.com/yesidexe/Entertainment-web-app" dep="https://euphonious-chaja-5dcb0d.netlify.app/">
                <TypeScriptIcon className="w-6 sm:w-7 hover:bg-white duration-300 hover:text-[#007ACC] text-zinc-300"/>           
                <CssIcon className='w-6 sm:w-7 duration-300 hover:text-[#33AADD] text-zinc-300'/>
                <ReactIcon className='duration-300 hover:text-[#00D8FF] text-zinc-300 w-6 sm:w-7'/>
            </WorkCards> 

            <WorkCards addClass="" title="Triki" src="/assets/triki.JPG" rep="https://github.com/yesidexe/Triki" dep="https://yesidexe.github.io/Triki/">
                <TypeScriptIcon className="hover:bg-white duration-300 hover:text-[#007ACC] text-zinc-300 w-6 sm:w-7"/>
                <TailwindIcon className='w-6 sm:w-7 duration-300 hover:text-[#44a8b3] text-zinc-300'/> 
                <ReactIcon className='duration-300 hover:text-[#00D8FF] text-zinc-300 w-6 sm:w-7'/>
            </WorkCards> 

            <WorkCards addClass="hidden workCards:block" title="E-commerce platzi" src="/assets/e-commerce-platzi.JPG" rep="https://github.com/yesidexe/E-Commerce-platzi" dep="https://e-commerce-platzi.vercel.app/">
                <JavaScriptIcon className="w-6 sm:w-7 hover:bg-zinc-950 duration-300 hover:text-[#F7DF1E] text-zinc-300"/>
                <NextjsIcon className='w-6 sm:w-7 hover:bg-zinc-300 hover:border rounded-full duration-300 hover:text-black text-zinc-300'/>
                <TailwindIcon className='w-6 sm:w-7 duration-300 hover:text-[#44a8b3] text-zinc-300'/>  
                <ReactIcon className='duration-300 hover:text-[#00D8FF] text-zinc-300 w-6 sm:w-7'/>
            </WorkCards> 

            <WorkCards addClass="hidden workCards:block" title="ToDo list" src="/assets/todo-list.JPG" rep="https://github.com/yesidexe/Todo-list" dep="https://yesidexe.github.io/Todo-list/">
                <JavaScriptIcon className="w-6 sm:w-7 hover:bg-zinc-950 duration-300 hover:text-[#F7DF1E] text-zinc-300"/>
                <ReactIcon className='duration-300 hover:text-[#00D8FF] text-zinc-300 w-6 sm:w-7'/>
            </WorkCards> 

            <WorkCards addClass="hidden workCards:block" title="Dictionary app" src="/assets/dictionary-app.JPG" rep="https://github.com/yesidexe/Dictionary-app" dep="https://yesidexe.github.io/Dictionary-app/">
                <JavaScriptIcon className="w-6 sm:w-7 hover:bg-zinc-950 duration-300 hover:text-[#F7DF1E] text-zinc-300"/>
                <TailwindIcon className='w-6 sm:w-7 duration-300 hover:text-[#44a8b3] text-zinc-300'/> 
                <ReactIcon className='duration-300 hover:text-[#00D8FF] text-zinc-300 w-6 sm:w-7'/>
            </WorkCards>     
        </div>
    </div>    
</section>
