import '../styles/borderEffect.css'
---

<section id="home" class="bg-gradient-to-b from-zinc-950 to-rose-950/10 h-screen w-full pt-14 flex">
    <div class="w-[90%] md:w-[60%] m-auto flex items-center justify-between">
        <div class="m-auto">
                <h3 class="text-zinc-300 font-medium text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl">Hola! <span class="font-normal text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl">Mi nombre es</span></h3>

                <h1 class="font-semibold bg-gradient-to-l from-rose-600 to-rose-950 text-transparent bg-clip-text sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl text-4xl">Yesid Jurado</h1>

            <div class="flex items-center justify-end gap-3 sm:gap-5 md:gap-8 lg:gap-10">

                <h2 class="text-zinc-50 text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl">Frontend Developer</h2>

                <a href="#contact" class="card text-zinc-300 bg-zinc-950  py-1 px-2 lg:py-2 lg:px-4 text-xs md:text-sm lg:text-base flex gap-2 items-center">
                    Escribeme 
                    <ArrowDownIcon className='hidden sm:block animate-right w-5 text-zinc-300 '/>                                     
